<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:descendantFocusability="blocksDescendants">

  <LinearLayout
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/medium_margin">

    <ImageView
      android:id="@+id/iv_thumbnail"
      android:layout_width="@dimen/huge_margin"
      android:layout_height="@dimen/huge_margin"
      android:adjustViewBounds="true"
      android:padding="@dimen/tiny_margin"
      app:srcCompat="@drawable/trailer_image" />

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/medium_margin"
      android:layout_weight="1"
      android:orientation="vertical"
      android:layout_marginEnd="@dimen/medium_margin">

      <TextView
        android:id="@+id/tv_title_trailer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gs_bold"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/colorText2"
        android:textSize="@dimen/medium_font_size"
        tools:text="Film menarik sekali" />

      <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:fontFamily="@font/gs_regular"
        android:textColor="@color/colorAccent3"
        android:textSize="@dimen/small_font_size"
        android:text="@string/watch_on_youtube" />

    </LinearLayout>

  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_below="@+id/ll_item"
    android:background="@color/colorText2" />

</RelativeLayout>